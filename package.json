{
  "name": "klg-koa-starter-kit",
  "version": "1.0.0",
  "description": "考拉后端项目模板",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "serve": "nodemon dist/src/app.js",
    "build": "tsc -d -p ./",
    "test": "jest",
    "cov": "jest --coverage --coverageDirectory=coverage",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/src/.*|(\\.|/)(test|spec))\\.ts$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaolalicai/klg-koa-starter-kit"
  },
  "keywords": [
    "klg"
  ],
  "author": "dev",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.0"
  },
  "dependencies": {
    "config": "^1.30.0",
    "klg-logger": "^1.0.4",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0",
    "mongodb-mock-server": "^1.0.0",
    "mongoose": "^5.1.1",
    "reflect-metadata": "^0.1.12",
    "tracer": "^0.8.12",
    "typegoose": "^5.2.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/koa": "^2.0.45",
    "@types/koa-router": "^7.0.23",
    "@types/mongoose": "^5.0.14",
    "@types/power-assert": "^1.4.29",
    "@types/supertest": "^2.0.4",
    "jest": "^22.4.2",
    "nock": "^9.2.6",
    "source-map-support": "^0.5.3",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-klg": "^1.0.4",
    "typescript": "^2.7.2",
    "webstorm-disable-index": "^1.2.0"
  }
}
